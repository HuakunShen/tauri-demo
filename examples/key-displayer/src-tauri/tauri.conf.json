{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "key-displayer",
  "version": "0.1.0",
  "identifier": "com.hk.key-displayer",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "key-displayer",
        "width": 800,
        "height": 600
      },
      {
        "label": "keycastr",
        "title": "Keycastr",
        "url": "/keycastr",
        "width": 500,
        "height": 160,
        "visible": true,
        "transparent": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "center": false,
        "x": 440,
        "y": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
